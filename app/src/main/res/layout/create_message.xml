<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark"
    tools:context="com.example.kravchik.proba2.CreateMessageActivity">
   <LinearLayout
       android:id="@+id/llout"
       android:layout_width="match_parent"
       android:layout_height="wrap_content">
    <Button
        android:id="@+id/send"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="11dp"
        android:layout_weight="1"
        android:onClick="onSendMessage"
        android:text="SEND MESSAGE" />
    <Button
        android:id="@+id/send2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="11dp"
        android:layout_weight="1"
        android:onClick="onSendMessage2"
        android:text="SEND INTENT" />

       <Button
           android:id="@+id/send3"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_marginTop="11dp"
           android:layout_weight="1"
           android:onClick="onSendMessage3"
           android:text="SEND CHoose" />
   </LinearLayout>

    <EditText
        android:id="@+id/message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/llout"
        android:layout_marginTop="18dp"
        android:ems="10" />
</RelativeLayout>
